/**index.wxss**/
page {
overflow: hidden;
}
.slider{
  width:650rpx;
  margin: 40rpx auto;
}
.task_text{
  height: 120rpx;
  margin: 40rpx auto;
  text-align: center;
}
.task_title{
 font-size: 35rpx;
 height: 70rpx;
 line-height: 60rpx;
 text-align: center;
}
.task_desc{
 font-size: 30rpx;
 height:50rpx;
 line-height:50rpx;
 text-align: center;
 color:#999999;
}
.task_cate{
  width: 660rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}
.cate_item{
  width: 220rpx;
  margin: 0 auto;
  height: 130rpx;
  text-align: center;
  margin-bottom: 50rpx;}
.cate_icon{
  height: 70rpx;
}
.cate_icon image{
  width: 80rpx;
  height: 80rpx;
}
.cate_text{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.cate_text_active{
  color: #E7624F;
}
.start{
  width:280rpx;
  height:90rpx;
  margin: 0 auto;
  line-height: 90rpx;
  text-align: center;
  border:6rpx solid #E7624F;
  color: #E7624F;
  border-radius: 60rpx;
}
.clock{
  overflow: hidden;
  height: 3000rpx;
  background-color: bisque;
}
.progress{
  width: 400rpx;
  height: 400rpx;
  background-color: crimson;
  border-radius:50%;
  overflow: hidden;
  margin: 140rpx auto;
  position: relative;
}
.progress_active{
 position: absolute;
 left: 0;
 top: 0;
 width: 400rpx;
 height: 400rpx;
}
.progress_bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
 }
.progress_text{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: #ffffff;
  text-align: center;
  position:absolute;
  left: 120rpx;
  top: 170rpx;
}
.okBtn,.pauseBtn,.continueBtn,.pauseBtn{
width:200rpx;
height:80rpx;
line-height: 80rpx;
text-align: center;
color: #E7624F;
border: 4rpx solid #E7624F;
border-radius: 30rpx;
margin: 20rpx auto;
}
