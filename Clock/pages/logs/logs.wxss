.sum{
  display:flex;
  flex-wrap:wrap;
  width:750rpx;
  height:350rpx;
  border:10rpx solid #eeeeee;
}
.sum_item{
  width:375rpx;
  height:160rpx;
  text-align: center;
}
.sum_item_title{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  color:#6B747E;
}
.sum_item_val{
  height:40rpx;
  line-height: 40rpx;
  color: #E7624F;
}
.detail{
  width:700rps;
}
.detail_title{
  display:flex;
  height: 60rpx;
  line-height: 60rpx;
}
.detail_title_text{
  flex: 1;
  font-size: 30rpx;
  padding-left: 30rpx;
}
.detail_title_type{
  flex: 1;
  text-align: right;
  font-size: 28rpx;
}
.detail_title_type text{
  padding-right: 20rpx
}
.active{
  color:#E7624F;
}
.list_item{
  display:flex;
  height:40rpx;
  line-height: 40rpx;
}
.list_item_date{
  width: 300rpx;
font-size: 30rpx;
text-align: center;
}
.list_item_cate{
  width: 200rpx;
font-size: 30rpx;
text-align: center;
}
.list_item_time{
  width: 200rpx;
font-size: 30rpx;
text-align: right;
}
